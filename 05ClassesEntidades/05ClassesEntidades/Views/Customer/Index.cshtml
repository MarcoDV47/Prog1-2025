@model List<Modelo.Customer>

<a class="btn btn-light" asp-action="Create" asp-controller="Customer">
    Novo Customer
</a>

@if(Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Customer customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                </tr>    
            }
        </tbody>
        <tfoot></tfoot>
    </table>
}
else
{
    <div>
        <p>
            Não existem registros de Customer
        </p>
    </div>
}

<a class="btn btn-light" asp-action="ExportDelimitatedFile" asp-controller="Customer">
    Exportar Dados
</a>

<form asp-action="" asp-controller="Customer" method="post">
    <input id="file" type="file"/>
    <button type="submit">Enviar</button>
</form>